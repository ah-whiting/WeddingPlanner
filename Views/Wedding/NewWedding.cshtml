@model Wedding

<div class="container p-5">
  <div class="row">
    <div class="col-8">
      <h2>Plan A Wedding</h2>
    </div>
    <div class="col-4">
      <a class="btn btn-secondary" href="/dashboard">Dashboard</a>
      <a class="btn btn-secondary" href="/logout">Log Out</a>
    </div>
    <div class="col-6 p-3">
      <form action="/weddings" method="POST">
        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Wedder1"></span></p>
          <label asp-for="Wedder1"></label>
          <input class="form-control" asp-for="Wedder1" />
        </div>
        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Wedder2"></span></p>
          <label asp-for="Wedder2"></label>
          <input class="form-control" asp-for="Wedder2" />
        </div>
        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Date"></span></p>
          <label asp-for="Date"></label>
          <input class="form-control" asp-for="Date" />
        </div>
        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Address"></span></p>
          <label asp-for="Address"></label>
          <input class="form-control" asp-for="Address" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
