@model User

<div class="container p-5">
  <div class="row">
    <div class="col-12 p-5">
      <h4>Registration</h4>
      <a class="badge badge-secondary" href="/login">Login</a>
    </div>
    <div class="col-6 p-2">
      <form action="/Register" method="POST">
        <div class="form-group">
          <p>
            <span class="text-danger" asp-validation-for="FirstName"></span>
          </p>
          <label asp-for="FirstName"></label>
          <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="LastName"></span></p>
          <label asp-for="LastName"></label>
          <input asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Email"></span></p>
          <label asp-for="Email"></label>
          <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
          <p><span class="text-danger" asp-validation-for="Password"></span></p>
          <label asp-for="Password"></label>
          <input asp-for="Password" class="form-control" />
        </div>

        <div class="form-group">
          <p>
            <span class="text-danger" asp-validation-for="cPassword"></span>
          </p>
          <label asp-for="cPassword"></label>
          <input asp-for="cPassword" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>
